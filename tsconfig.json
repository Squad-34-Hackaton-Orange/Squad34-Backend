{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "resolveJsonModule": true,
      "outDir": "./dist", 
      "rootDir": "./src", 
      "strict": true,
      "esModuleInterop": true,
      "typeRoots": [
        "./src/@types",
        "./node_modules/@types"
      ]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
  